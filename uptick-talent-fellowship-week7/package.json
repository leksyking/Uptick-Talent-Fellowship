{
        "name": "uptick-week6",
        "version": "1.0.0",
        "description": "A basic task management application with models, view, and controllers.",
        "main": "app.js",
        "scripts": {
                "dev": "nodemon app.js",
                "start": "node app.js",
                "migrate": "npx sequelize-cli db:migrate",
                "migrate:reset": "npx sequelize-cli db:migrate:undo:all && npm run migrate",
                "test": "cross-env NODE_ENV=test jest --testTimeout=10000",
                "pretest": "cross-env NODE_ENV=test npm run migrate:reset"
        },
        "repository": {
                "type": "git",
                "url": "git+https://github.com/leksyking/uptick-task-week6.git"
        },
        "author": "Ogundipe Felix",
        "license": "ISC",
        "bugs": {
                "url": "https://github.com/leksyking/uptick-task-week6/issues"
        },
        "homepage": "https://github.com/leksyking/uptick-task-week1#readme",
        "dependencies": {
                "dotenv": "^16.3.1",
                "express": "^4.18.2",
                "express-async-errors": "^3.1.1",
                "http-status-codes": "^2.3.0",
                "mongoose": "^7.5.2",
                "pg": "^8.11.3",
                "sequelize": "^6.33.0"
        },
        "devDependencies": {
                "cross-env": "^7.0.3",
                "jest": "^29.7.0",
                "nodemon": "^3.0.1",
                "supertest": "^6.3.3"
        },
        "jest": {
                "testEnvironment": "node",
                "coveragePathIgnorePatterns": [
                        "/node_modules/"
                ]
        }
}
